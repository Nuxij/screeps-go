{
  "name": "screeps-go",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "yarn clean && yarn transpile && yarn grunt",
    "watch": "nodemon -w src -e .js,.go --exec yarn build",
    "watch-build": "nodemon -w src -e .js,.go --exec yarn transpile",
    "grunt": "grunt",
    "clean": "grunt clean",
    "copyjs": "copyfiles src/main.js build/dist",
    "minify": "babel-minify build/gopher -d build/dist",
    "transpile": "gopherjs build ./src -v -o build/dist/screeps.js",
    "build-wasm": "cd src && tinygo build -o screeps.wasm -target wasm -gc=none -no-debug ./main.go"
  },
  "dependencies": {
    "babel-minify": "^0.5.1",
    "copyfiles": "^2.4.1",
    "grunt": "^1.3.0",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-screeps": "^1.4.0",
    "nodemon": "^2.0.6"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/core": "^7.12.3",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "babel-minify": "*",
    "grunt-babel": "^8.0.0",
    "grunt-contrib-clean": "^2.0.0"
  }
}
